<form action="/recipes/<%= @recipe.id %>" method="POST">
	<input type="hidden" name="_method" value="patch">
	Name: <input type="text" name="name" placeholder=<%= @recipe.name %>><br>
	Cook Time: <input type="text" name="cook_time" placeholder=<%= @recipe.cook_time %>><br>
	Ingredients: <input type="text" name="ingredients" placeholder=<%= @recipe.ingredients %>><br>
	<input type="submit">
</form>